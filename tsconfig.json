{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es3",
        "strict": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "outDir": "lib",
        "sourceMap": true,
        "declaration": true,
        "rootDir": "./src",
        "allowJs": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}